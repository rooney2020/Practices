<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gary"
        tools:context=".CalculatorActivity">

        <TextView
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/more"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gary"
            android:gravity="end"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/tv_result"
            app:layout_constraintTop_toBottomOf="@id/btn_more"
            tool:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gary"
            android:gravity="end"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/btn_region"
            app:layout_constraintTop_toBottomOf="@id/tv_display"
            tool:text="@string/app_name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_input_clear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_clear"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_percent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_input_percent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_percent"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_delete"
                app:layout_constraintStart_toEndOf="@id/btn_input_clear"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_input_delete"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_delete"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_divide"
                app:layout_constraintStart_toEndOf="@id/btn_input_percent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_input_divide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_divide"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_input_delete"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_input_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_1"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_input_clear" />

            <Button
                android:id="@+id/btn_input_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_2"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_3"
                app:layout_constraintStart_toEndOf="@id/btn_input_1"
                app:layout_constraintTop_toBottomOf="@id/btn_input_clear" />

            <Button
                android:id="@+id/btn_input_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_3"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_times"
                app:layout_constraintStart_toEndOf="@id/btn_input_2"
                app:layout_constraintTop_toBottomOf="@id/btn_input_clear" />

            <Button
                android:id="@+id/btn_input_times"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_times"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_input_3"
                app:layout_constraintTop_toBottomOf="@id/btn_input_clear" />

            <Button
                android:id="@+id/btn_input_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_4"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_input_1" />

            <Button
                android:id="@+id/btn_input_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_5"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_6"
                app:layout_constraintStart_toEndOf="@id/btn_input_4"
                app:layout_constraintTop_toBottomOf="@id/btn_input_1" />

            <Button
                android:id="@+id/btn_input_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_6"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_minus"
                app:layout_constraintStart_toEndOf="@id/btn_input_5"
                app:layout_constraintTop_toBottomOf="@id/btn_input_1" />

            <Button
                android:id="@+id/btn_input_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_minus"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_input_6"
                app:layout_constraintTop_toBottomOf="@id/btn_input_1" />

            <Button
                android:id="@+id/btn_input_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_7"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_input_4" />

            <Button
                android:id="@+id/btn_input_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_8"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_9"
                app:layout_constraintStart_toEndOf="@id/btn_input_7"
                app:layout_constraintTop_toBottomOf="@id/btn_input_4" />

            <Button
                android:id="@+id/btn_input_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_9"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintEnd_toStartOf="@id/btn_input_plus"
                app:layout_constraintStart_toEndOf="@id/btn_input_8"
                app:layout_constraintTop_toBottomOf="@id/btn_input_4" />

            <Button
                android:id="@+id/btn_input_plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_plus"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_input_9"
                app:layout_constraintTop_toBottomOf="@id/btn_input_4" />

            <Button
                android:id="@+id/btn_input_00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_00"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_input_0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_input_7" />

            <Button
                android:id="@+id/btn_input_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_0"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_input_point"
                app:layout_constraintStart_toEndOf="@id/btn_input_00"
                app:layout_constraintTop_toBottomOf="@id/btn_input_7" />

            <Button
                android:id="@+id/btn_input_point"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_point"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_input_equal"
                app:layout_constraintStart_toEndOf="@id/btn_input_0"
                app:layout_constraintTop_toBottomOf="@id/btn_input_7" />

            <Button
                android:id="@+id/btn_input_equal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_button_radius"
                android:text="@string/input_equal"
                android:textColor="@color/teal_200"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_input_point"
                app:layout_constraintTop_toBottomOf="@id/btn_input_7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>