<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_dim"
    android:clickable="true"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tmec_dialog_small"
        android:layout_width="@dimen/width_748px"
        android:layout_height="@dimen/height_408px">

        <com.tsdl.practices.custom.textview.TmecTextTitle
            android:id="@+id/tv_title"
            style="@style/small_tv_title"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmec_text_color_mode="normal_mode" />

        <com.tsdl.practices.custom.textview.TmecTextBody
            android:id="@+id/tv_no_title_content"
            style="@style/small_tv_no_title_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmec_text_color_mode="normal_mode" />

        <com.tsdl.practices.custom.textview.TmecTextSmallBody
            android:id="@+id/tv_main_content_two"
            style="@style/small_tv_main_content_two"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmec_text_color_mode="normal_mode" />

        <com.tsdl.practices.custom.textview.TmecTextSmallBody
            android:id="@+id/tv_title_content"
            style="@style/small_tv_title_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmec_text_color_mode="normal_mode" />


        <com.tsdl.practices.custom.textview.TmecTextTipsBody
            android:id="@+id/tv_minor_content"
            style="@style/small_tv_minor_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tmec_text_color_mode="minor_mode" />

        <com.tsdl.practices.custom.button.TmecButtonHighLight
            android:id="@+id/btn_ok"
            style="@style/small_btn_ok"
            android:text="@string/btn_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.tsdl.practices.custom.button.TmecButtonCancel
            android:id="@+id/btn_cancel"
            style="@style/small_btn_cancel"
            android:text="@string/btn_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>