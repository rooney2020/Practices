<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/rad_night_checked_pre"/>
            <item android:state_enabled="true" android:drawable="@drawable/rad_night_checked_nor"/>
            <item android:state_enabled="false" android:drawable="@drawable/rad_night_checked_dis"/>
        </selector>
    </item>

    <item android:state_checked="false">
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/rad_night_pre"/>
            <item android:state_enabled="true" android:drawable="@drawable/rad_night_nor"/>
            <item android:state_enabled="false" android:drawable="@drawable/rad_night_dis"/>
        </selector>
    </item>
</selector>