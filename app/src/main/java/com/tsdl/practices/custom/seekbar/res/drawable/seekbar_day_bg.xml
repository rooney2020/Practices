<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="@dimen/dimens_seekbar_12dp"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="@color/tmec_seekbar_voice_bg" />
            <corners android:radius="@dimen/dimens_seekbar_50dp" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        android:height="@dimen/dimens_seekbar_12dp"
        android:gravity="center_vertical">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:angle="225"
                    android:endColor="@color/tmec_seekbar_voice_end"
                    android:startColor="@color/tmec_seekbar_voice_start"
                    android:type="linear"
                    android:useLevel="true" />
                <corners android:radius="@dimen/dimens_seekbar_50dp" />
            </shape>
        </clip>
    </item>
</layer-list>