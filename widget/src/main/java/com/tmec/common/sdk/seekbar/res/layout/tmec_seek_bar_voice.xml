<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.tmec.common.sdk.textview.TmecTextMinorTitle
        android:id="@+id/tv_seekbar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tmec_text_color_mode="normal_mode"/>
    <SeekBar
        android:id="@+id/sb_voice"
        android:layout_width="@dimen/tmec_seekbar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tmec_seekbar_margin_start"
        android:layout_marginEnd="@dimen/tmec_seekbar_margin_end"
        android:layout_gravity="center_vertical"
        android:thumb="@drawable/tmec_seekbar_thumb"
        android:progressDrawable="@drawable/seekbar_day_bg"
        android:splitTrack="false"
        android:duplicateParentState="true" />
    <com.tmec.common.sdk.textview.TmecTextMinorTitle
        android:id="@+id/tv_seekbar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tmec_text_color_mode="normal_mode"/>
</LinearLayout>