<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseVerticalScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_progress_shape</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_bg_shape</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="BaseHorizontalScrollbarStyle">
        <item name="android:scrollbars">horizontal</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scroll_progress_shape</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/scroll_bg_shape</item>
    </style>

</resources>
